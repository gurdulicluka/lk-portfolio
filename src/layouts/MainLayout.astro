---
import Head from "./Head.astro";

import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<html lang="en">
  <Head {title} />
  <body style={{ backgroundColor: "red" }} class="min-w-[320px] bg-pink-100">
    <main class="min-h-screen">
      <slot />
    </main>
    <footer class="bg-cyan-600">{"FOOTER".repeat(20)}</footer>
  </body>
</html>
